#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <Servo.h>

LiquidCrystal_I2C lcd(0x3F, 16, 2);  // LCD I2C address may be 0x27 or 0x3F
Servo myservo;

int IR1 = 2;    // Entry sensor
int IR2 = 4;    // Exit sensor
int Slot = 4;   // Total parking slots
int flag1 = 0;  // Entry flag
int flag2 = 0;  // Exit flag

void setup() {
  lcd.init();
  lcd.backlight();

  pinMode(IR1, INPUT);
  pinMode(IR2, INPUT);

  myservo.attach(3);
  myservo.write(100);  // Servo closed position

  lcd.setCursor(0, 0);
  lcd.print(" ARDUINO ");
  lcd.setCursor(0, 1);
  lcd.print("PARKING SYSTEM");
  delay(2000);
  lcd.clear();
}

void loop() {
  // Entry detection
  if (digitalRead(IR1) == LOW && flag1 == 0) {
    flag1 = 1;
    if (Slot > 0) {
      myservo.write(0); // Open gate
      Slot--;
      lcd.clear();
      lcd.setCursor(0, 0);
      lcd.print("Car Entered");
      delay(2000);
    } else {
      lcd.clear();
      lcd.setCursor(0, 0);
      lcd.print("SORRY :(");
      lcd.setCursor(0, 1);
      lcd.print("Parking Full");
      delay(3000);
    }
  }

  // Exit detection
  if (digitalRead(IR2) == LOW && flag2 == 0) {
    flag2 = 1;
    myservo.write(0); // Open gate
    Slot++;
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("Car Exited");
    delay(2000);
  }

  // Reset gate and flags
  if (flag1 == 1 || flag2 == 1) { // Use OR to reset if either flag is set
    delay(1000);
    myservo.write(100); // Close gate
    flag1 = 0;
    flag2 = 0;
  }

  // Display available slots
  lcd.setCursor(0, 0);
  lcd.print("WELCOME!");
  lcd.setCursor(0, 1);
  lcd.print("Slots Left: ");
  lcd.print(Slot);
  delay(500);
}
